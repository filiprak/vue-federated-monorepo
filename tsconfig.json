{
    "include": [
        "packages/*/src/**/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "@/utils/*": [
                "packages/utils/src/*"
            ],
            "@/ui/*": [
                "packages/ui/src/*"
            ],
            "@/webapp/*": [
                "packages/webapp/src/*"
            ]
        }
    }
}
